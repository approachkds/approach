<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SelectNVOMapper">
  
   
  
  <select id="findAreaSales" resultType="AreaSaleNVO">
  	SELECT AREA_CD AREACD
  		  ,REGION_AREA REGIONAREA
  		  ,PROD_ID PRODID
  		  ,SUM(SALE_CNT) SALECNT
  	FROM SALE_TBL
  	WHERE AREA_CD = #{areaCd}
  	  AND ROWNUM = 1
  	GROUP BY AREA_CD
  	         ,REGION_AREA
  	         ,PROD_ID  	  
  </select>
  
  <select id="findMsale" resultType="MsalesNVO">
  	SELECT PRODID
		      ,PRODNM
		      ,SALECNT
	FROM MSALES      
  </select>

	<select id="findMsaleMap" resultType="map">
		SELECT PRODID
		      ,PRODNM
		      ,SALECNT
		FROM MSALES       
	</select>
  
</mapper>

